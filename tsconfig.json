{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["*.js", "modules/**/*.js", "types/**/*.d.ts"],
  "exclude": ["scripts/**", "dist/**", "vendor/**", "service-worker.js"]
}
